{
  "compilerOptions": {
    "baseUrl": "./src",
    "types": [
      "jest",
      "jest-extended",
      "jest-axe",
      "@testing-library/jest-dom/extend-expect",
      "jest-emotion",
      "snapshot-diff"
    ],
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "*.js",
    ".eslintrc.js",
    "**/.babelrc.js"
  ]
}
